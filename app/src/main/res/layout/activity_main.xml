<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <com.camerakit.CameraKitView
        android:id="@+id/camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:keepScreenOn="true"
        app:camera_flash="auto"
        app:camera_facing="back"
        app:camera_focus="continuous"
        app:camera_permissions="camera|storage" />

    <ImageButton
        android:id="@+id/button_snap"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="22%"
        app:layout_aspectRatio="100%"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/selector_button_snap" />

    <ImageButton
        android:id="@+id/button_flip"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="11%"
        app:layout_aspectRatio="135%"
        android:layout_toLeftOf="@id/button_snap"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/selector_button_flip" />

    <CheckBox
        android:id="@+id/checkbox_flash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="5%"
        app:layout_aspectRatio="56%"
        android:layout_toRightOf="@id/button_snap"
        android:button="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/selector_checkbox_flash" />

</androidx.percentlayout.widget.PercentRelativeLayout>